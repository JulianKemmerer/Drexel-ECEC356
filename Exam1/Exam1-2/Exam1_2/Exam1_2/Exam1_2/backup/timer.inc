include "m8c.inc"


;--------------------------------------------------
; Constants for Timer API's.
;--------------------------------------------------

Timer_CONTROL_REG_START_BIT:               equ 0x01    ; Control register start bit
Timer_INT_REG:                             equ 0x0e1
Timer_INT_MASK:                            equ 0x02


;--------------------------------------------------
; Constants for Timer user defined values
;--------------------------------------------------

Timer_PERIOD:                              equ 0xffff
Timer_COMPARE_VALUE:                       equ 0x0


;--------------------------------------------------
; Register Address Constants for Timer
;--------------------------------------------------

Timer_COUNTER_LSB_REG:                 equ 0x20   ; DR0 Counter register
Timer_COUNTER_MSB_REG:                 equ 0x24
Timer_PERIOD_LSB_REG:                  equ 0x21   ; DR1 Period register
Timer_PERIOD_MSB_REG:                  equ 0x25
Timer_COMPARE_LSB_REG:                 equ 0x22   ; DR2 CompareValue register
Timer_COMPARE_MSB_REG:                 equ 0x26
Timer_CONTROL_LSB_REG:                 equ 0x23   ; Control register
Timer_CONTROL_MSB_REG:                 equ 0x27
Timer_FUNC_LSB_REG:                    equ 0x20   ; Function register
Timer_FUNC_MSB_REG:                    equ 0x24
Timer_INPUT_LSB_REG:                   equ 0x21   ; Input register
Timer_INPUT_MSB_REG:                   equ 0x25
Timer_OUTPUT_LSB_REG:                  equ 0x22   ; Output register
Timer_OUTPUT_MSB_REG:                  equ 0x26


;--------------------------------------------------
; Timer Macro 'Functions'
;--------------------------------------------------

   macro Timer_Start_M
   or    reg[Timer_CONTROL_LSB_REG],  Timer_CONTROL_REG_START_BIT
   endm

   macro Timer_Stop_M
   and   reg[Timer_CONTROL_LSB_REG], ~Timer_CONTROL_REG_START_BIT
   endm

   macro Timer_EnableInt_M
   M8C_EnableIntMask Timer_INT_REG, Timer_INT_MASK
   endm

   macro Timer_DisableInt_M
   M8C_DisableIntMask Timer_INT_REG, Timer_INT_MASK
   endm


