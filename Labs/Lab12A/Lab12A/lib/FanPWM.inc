include "m8c.inc"


;--------------------------------------------------
; Constants for FanPWM API's.
;--------------------------------------------------

FanPWM_CONTROL_REG_START_BIT:              equ 0x01    ; Control register start bit
FanPWM_INT_REG:                            equ 0x0e1
FanPWM_INT_MASK:                           equ 0x01


;--------------------------------------------------
; Constants for FanPWM user defined values
;--------------------------------------------------

FanPWM_PERIOD:                             equ 0xff
FanPWM_PULSE_WIDTH:                        equ 0x80


;--------------------------------------------------
; Register Address Constants for FanPWM
;--------------------------------------------------

FanPWM_COUNTER_REG:                    equ 0x20   ; DR0 Count register
FanPWM_PERIOD_REG:                     equ 0x21   ; DR1 Period register
FanPWM_COMPARE_REG:                    equ 0x22   ; DR2 Compare register
FanPWM_CONTROL_REG:                    equ 0x23   ; Control register
FanPWM_FUNC_REG:                       equ 0x20   ; Function register
FanPWM_INPUT_REG:                      equ 0x21   ; Input register
FanPWM_OUTPUT_REG:                     equ 0x22   ; Output register


;--------------------------------------------------
; FanPWM Macro 'Functions'
;--------------------------------------------------

   macro FanPWM_Start_M
   or    reg[FanPWM_CONTROL_REG],  FanPWM_CONTROL_REG_START_BIT
   endm

   macro FanPWM_Stop_M
   and   reg[FanPWM_CONTROL_REG], ~FanPWM_CONTROL_REG_START_BIT
   endm

   macro FanPWM_EnableInt_M
   M8C_EnableIntMask FanPWM_INT_REG, FanPWM_INT_MASK
   endm

   macro FanPWM_DisableInt_M
   M8C_DisableIntMask FanPWM_INT_REG, FanPWM_INT_MASK
   endm


