include "m8c.inc"


;--------------------------------------------------
; Constants for TachTimer API's.
;--------------------------------------------------

TachTimer_CONTROL_REG_START_BIT:           equ 0x01    ; Control register start bit
TachTimer_INT_REG:                         equ 0x0e1
TachTimer_INT_MASK:                        equ 0x20


;--------------------------------------------------
; Constants for TachTimer user defined values
;--------------------------------------------------

TachTimer_PERIOD:                          equ 0x0
TachTimer_COMPARE_VALUE:                   equ 0x0


;--------------------------------------------------
; Register Address Constants for TachTimer
;--------------------------------------------------

TachTimer_COUNTER_LSB_REG:             equ 0x30   ; DR0 Counter register
TachTimer_COUNTER_MSB_REG:             equ 0x34
TachTimer_PERIOD_LSB_REG:              equ 0x31   ; DR1 Period register
TachTimer_PERIOD_MSB_REG:              equ 0x35
TachTimer_COMPARE_LSB_REG:             equ 0x32   ; DR2 CompareValue register
TachTimer_COMPARE_MSB_REG:             equ 0x36
TachTimer_CONTROL_LSB_REG:             equ 0x33   ; Control register
TachTimer_CONTROL_MSB_REG:             equ 0x37
TachTimer_FUNC_LSB_REG:                equ 0x30   ; Function register
TachTimer_FUNC_MSB_REG:                equ 0x34
TachTimer_INPUT_LSB_REG:               equ 0x31   ; Input register
TachTimer_INPUT_MSB_REG:               equ 0x35
TachTimer_OUTPUT_LSB_REG:              equ 0x32   ; Output register
TachTimer_OUTPUT_MSB_REG:              equ 0x36


;--------------------------------------------------
; TachTimer Macro 'Functions'
;--------------------------------------------------

   macro TachTimer_Start_M
   or    reg[TachTimer_CONTROL_LSB_REG],  TachTimer_CONTROL_REG_START_BIT
   endm

   macro TachTimer_Stop_M
   and   reg[TachTimer_CONTROL_LSB_REG], ~TachTimer_CONTROL_REG_START_BIT
   endm

   macro TachTimer_EnableInt_M
   M8C_EnableIntMask TachTimer_INT_REG, TachTimer_INT_MASK
   endm

   macro TachTimer_DisableInt_M
   M8C_DisableIntMask TachTimer_INT_REG, TachTimer_INT_MASK
   endm


